<div class="contents row">
  <div class="container">
    <div class="new-head">
      <h2>ログイン</h2>
     </div>

     <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, id:"user_email_field" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "off", id:"user_password_field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", id:"user_submit_btn" %>
      </div>
    <% end %>
  </div>
</div>

<div class="back-login">
  <div class="home">
   <%= link_to 'ホームに戻る', root_path, class:"back-home" %>
  </div>

  <div class="login">
    <%= link_to '新規登録', new_user_registration_path, class:"send-login" %>
  </div>
</div>
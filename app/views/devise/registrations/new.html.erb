<div class="contents row">
  <div class="container">
    <div class="new-head">
    <h2>Sign up</h2>
    </div>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :お名前 %><em>(店舗名)</em><br />
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :パスワード再入力 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>

<div class="back-login">
  <div class="home">
   <%= link_to 'ホームに戻る', root_path, class:"back-home" %>
  </div>

  <div class="login">
    <%= link_to 'ログイン', new_user_session_path, class:"send-login" %>
  </div>
</div>
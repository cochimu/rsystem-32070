<%= render "shared/header" %>

<div class="container">
  <table>
    <tr>
      <th colspan="2">提案項目</th>
    </tr>

    <% @items.each do |item| %>
      <tr>
        <td class="left"><%= item.content %></td><td class="right"><%= link_to "削除", item_path(item.id), method: :delete, class:"staff-del"%></td>
      </tr>
    <% end %>
  </table>
</div>

<div class="new-btn">
  <%= link_to "新規登録", new_item_path, class:"new-button" %>
</div>

<div class="back-btn">
  <%= link_to "TOPページに戻る", root_path, class:"back-button" %>
</div>